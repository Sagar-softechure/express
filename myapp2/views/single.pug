h1 #{title}

if post
  p #{post.title}
  p #{post.content}
  p #{post.author}
  p #{post.tags}
  p #{post.isPublished}
  p #{post.createdAt}

  // âœ… Comment form
  form#commentForm
    input(type="text", name="content", placeholder="Write your comment")
    button(type="submit") Add Comment

  if comments
    each comment in comments
      p #{comment.content}
      p #{comment.createdAt}
      p #{comment._id}
      form(action="/comments/" + comment._id + "?_method=DELETE", method="POST")
        button(type="submit") Delete Comment
      form(action="/comments/edit/" + comment._id, method="GET")
        button(type="submit") Update Comment

if user
  p #{user.name}
  p #{user.email}
  p #{user.role}
  p #{user.createdAt}

